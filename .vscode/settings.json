{
  "vitest.nodeEnv": {},
  "vitest.include": [
    "**/*.{test,spec}.{js,mjs,cjs,ts,mts,cts,jsx,tsx}",
    "**/src/should_included_test.ts"
  ],
  "vitest.exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/cypress/**",
    "**/.{idea,git,cache,output,temp}/**",
    "**/ignored.test.ts"
  ],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vitest.commandLine": "pnpm test --",
  "vitest.enable": true
}
